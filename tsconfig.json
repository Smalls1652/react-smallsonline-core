{
    "compilerOptions": {
        "allowSyntheticDefaultImports": true,
        "declaration": true,
        "declarationDir": "dist",
        "importHelpers": true,
        "isolatedModules": true,
        "jsx": "react-jsx",
        "lib": [
            "ES6",
            "DOM"
        ],
        "module": "CommonJS",
        "moduleResolution": "Node",
        "outDir": "dist/esm",
        "sourceMap": true,
        "target": "ES6",
        "typeRoots": ["node_modules/@types"]
    },
    "include": [
        "src"
    ],
    "exclude": [
        "node_modules",
        "dist",
        ".vscode"
    ]
}